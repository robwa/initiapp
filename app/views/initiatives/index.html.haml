%div.container
  %div.content-bubble.col-md-6
    %h3= t('.create')
    = form_for(@initiative) do |f|
      = f.text_field :name, class:'form-control', placeholder: t('.placeholder_create')
      = f.submit t('.create'), class: 'btn btn-primary'
%div.container
  %div.content-bubble.col-md-6
    %h3= t('.existing-ini-list')
    %ul
      - @initiatives.each do |i|
        %li= link_to i.name, i
